<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
                Task
            </div>
        <div class="card-body">
            {{#if contacts}}
            <ul class="list-group">
                {{#each contacts}}
                    <li class="list-group-item d-flex justify-content-between aling-items-center">
                        {{firstname}}
                        {{lastname}} / 
                        {{email}} / 
                        {{phone}}
                        <a href="/delete-contact/{{@key}}" class="btn btn-danger">
                            Delete
                        </a>
                    </li>
                {{/each}}
            </ul>
                
            {{else}}
            <h1>No contacts yet</h1>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/new-contact" method="post"><!--Definimos la ruta donde se envia la informacion (ver routes) y el metodo (post, get, others-->
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="First Name" class="form-control" autofocus>
                    <input type="text" name="lastname" placeholder="Last Name" class="form-control" >
                    <input type="text" name="email" placeholder="Email" class="form-control" >
                    <input type="text" name="phone" placeholder="Phone" class="form-control" >
                    <button class="btn btn-primary btn-block">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>